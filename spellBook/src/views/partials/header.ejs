<!-- COMIENZA EL HEADER -->    
<div class="wrap">
  <header class="header error-bg">
   <div class="star star1"></div>
    <div class="star star2"></div>
    <div class="star star3"></div>
    <div class="star star4"></div>
    <div class="star star5"></div>
    <div class="star star6"></div>
    <div class="star star7"></div>
    <div class="star star8"></div> 
    <!-- LOGO CON LINK AL HOME -->
    <div class="logo">
      <h1 class="logo__title"><a href="/" class="logo__link">SpellBook</a></h1>
    </div>
    <!-- BURGER MENU -->
    <div class="burger">
      <span class="line line1"></span>
      <span class="line line2"></span>
      <span class="line line3"></span>
    </div>
    <!-- MENU DESPLEGABLE -->
    <nav class="menu">
      <a href="/" class="menu__link">Inicio</a>
      <a href="/product" class="menu__link">Libros</a>
      <a href="/novelties" class="menu__link">Recomendados</a>
      <a href="/novelties" class="menu__link">Novedades</a>
      <a href="/aboutUs" class="menu__link">Nosotros</a> 
    </nav>
      <!-- LUPA, CARRITO Y MAGO DE USUARIO -->
    <div class="icons">
      <div class="search-icon">
        <i class="fas fa-search"></i>
      </div>
      <div class="cart-icon">
        <a href="/cart"><i class="fas fa-shopping-cart cart-icon"></i></a>
      </div>
      <div >
         <img class="wizard" src="/images/Recursos/wizard-icon.png" alt="" />
      </div>
    </div>
    <!-- LUPA DE BUSQUEDA -->
    <form action="/search" method="get" class="search" >
        <input type="search" name="search" placeholder="Buscar" class="search-header">
       
    </form>
    <!-- HACIA EL CARRITO DE COMPRAS -->
  
    <!-- MAGO PARA REGISTRARSE -->
      <div class="card-user">
    <% if (locals.inLogged) { %> <% if (locals.userLog.rol === "admin") { %>
              <a href="/admin/addProduct">
                <p><%= locals.userLog.name %>  </p>
              </a>
             <a href="/user/logout" >
                 <p> Cerrar sesión</p>
             </a>
    <% } else if (locals.userLog.rol === "user") { %>            
              <a href="/user/profile" >
                <p><%= locals.userLog.name %> </p>
             </a>
             <a href="/user/logout">
                 <p> Cerrar sesión</p>
             </a>             
    <% } %> <% } else { %>
              </a>                        
              <a href="/user/login">
                <p>Ingresar</p>
             </a>
             <a href="/user/signUp" >
                 <p> Registrarse</p>
             </a> 
    <% } %>
  </div>
  </header>
  </div>