<!DOCTYPE html>
<html lang="es">
    <!-- HEAD -->
    <%- include('../partials/head') %>
  <body>
<!-- HEADER -->
<%- include('../partials/header') %> 

    <aside class="aside">
      <figure class="logo-sticker">
        <div class="star star1"></div>
        <div class="star star2"></div>
        <div class="star star3"></div>
        <div class="star star4"></div>
        <div class="star star5"></div>
        <div class="star star6"></div>
        <div class="star star7"></div>
        <div class="star star8"></div>
        <img
          src="/images/Diseño y Logo/Logo-Berkshire.png"
          alt=""
          class="logo-sticker__img">
      </figure>
      <form action="/user/login" method="POST" class="form" id="form">
        <div class="box">
          <h2 class="box__title">Iniciar sesion</h2>
        </div>

        <div class="user">
          <input 
          id="email"
            type="email"
            name="email"
            placeholder="Correo de Usuario"
            class="user__info"
          />
          <span class="warning" id="emailError"></span>
          <% if(locals.errors && errors.email) { %> 
            <span class="warning"><i class="fas fa-exclamation-circle"></i><%= errors.email.msg %> </span>
          <% } %> 
        </div>

        <div class="user">
          <input
          id="password"
            type="password"
            name="password"
            placeholder="Contraseña"
            class="user__info"
          />
          <span class="warning" id="passwordError"></span>
          <% if(locals.errors && errors.password) { %> 
            <span class="warning"><i class="fas fa-exclamation-circle"></i><%= errors.password.msg %> </span>
          <% } %> 
        </div>
    
        <div>
          <label class="terminos" for="recuerdame">
            <input class="fit-content" type="checkbox" 
            name="recuerdame" 
            id="remember">
            Recordarme en este equipo
          </label>
        </div>
        <button type="submit" value="Enviar" class="btn__send button">Iniciar sesion</button>
        <span class="warning" id="formError"></span>
        <div class="user">
          <a href="" class="enlace_link">¿Olvidaste tu contraseña?</a>
          <a href="/user/signup" class="enlace_link"  >¿No tenés cuenta?</a>
        </div>
        <div class="user social">
          <a href="" class="social__btn button"
            ><i class="fab fa-google social__icon"></i>GOOGLE</a
          >
          <a href="" class="social__btn button"
            ><i class="fab fa-facebook-f social__icon"></i>FACEBOOK</a
          >
        </div>
      </form>
    </aside>

   <!-- FOOTER -->
   <%- include('../partials/footer') %>

   <script src="/js/header.js"></script>
   <script src="/js/loginValidator.js"></script>
  </body>
</html>

