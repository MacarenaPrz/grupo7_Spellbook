<!DOCTYPE html>
<html lang="es">
    <!-- HEAD -->
    <%- include('../partials/head') %>
  <body>
<!-- HEADER -->
<%- include('../partials/header') %> 

    <aside class="aside">
      <figure class="logo-sticker">
        <div class="star star1"></div>
        <div class="star star2"></div>
        <div class="star star3"></div>
        <div class="star star4"></div>
        <div class="star star5"></div>
        <div class="star star6"></div>
        <div class="star star7"></div>
        <div class="star star8"></div>
        <img
          src="images/Diseño y Logo/Logo-Berkshire.png"
          alt=""
          class="logo-sticker__img">
      </figure>
      <form action="/user" method="POST" class="form">
        <div class="box">
          <h2 class="box__title">Iniciar sesion</h2>
        </div>

        <div class="user">++++++++++++.
          362
          <input
            type="text"
            name="name"
            placeholder="Nombre de Usuario"
            class="user__info"
            value="<%= locals.old && old.name %>"
          >  
          <% if (locals.errors && errors.name) { %>
            <% if (errors.name.msg  !== 'El usuario o la contraseña no coinciden') { %>
              <span class="warning"><%= errors.name.msg %> </span>
            <% } %>         
          <% } %>
        
        </div>

        <div class="user">
          <input
            type="password"
            name="password"
            placeholder="Contraseña"
            class="user__info"
          >   
          <% if (locals.errors && errors.password) { %>
            <% if (errors.password.msg  !== 'El usuario o la contraseña no coinciden') { %>
            <span class="warning"><%= errors.password.msg %> </span>
            <% } %>
          <% } %>
          
        </div>
        <% if (locals.errors) { %>
          <% if (errors.name.msg == " ") { %>
           <% if (errors.password.msg == " ") { %>
            <span class="warning">E-mail o contraseña incorrectos </span>
           <% } %>
          <% } %>           
        <% } %>        

        <div>
          <label class="terminos" for="recuerdame">
            <input class="fit-content" type="checkbox" 
            name="recuerdame" 
            id="recuerdame">
            Recordarme en este equipo
          </label>
        </div>
        <button type="submit" value="Enviar" class="btn__send button">Iniciar sesion</button>
        <div class="user">
          <a href="" class="enlace_link">¿Olvidate tu contraseña?</a>
          <a href="/user/signup" class="enlace_link"  >¿No tenes cuenta?</a>
        </div>
        <div class="user social">
          <a href="" class="social__btn button"
            ><i class="fab fa-google social__icon"></i>GOOGLE</a
          >
          <a href="" class="social__btn button"
            ><i class="fab fa-facebook-f social__icon"></i>FACEBOOK</a
          >
        </div>
      </form>
    </aside>

   <!-- FOOTER -->
   <%- include('../partials/footer') %>

   <script src="/js/header.js"></script>
  </body>
</html>
