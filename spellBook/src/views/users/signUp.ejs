<!DOCTYPE html>
<html lang="es">
  <!-- HEAD -->
  <%- include('../partials/head') %>
  <body>
    <!-- HEADER -->
    <%- include('../partials/header') %>

    <aside class="aside">
      <figure class="logo-sticker">
        <div class="star star1"></div>
        <div class="star star2"></div>
        <div class="star star3"></div>
        <div class="star star4"></div>
        <div class="star star5"></div>
        <div class="star star6"></div>
        <div class="star star7"></div>
        <div class="star star8"></div>
        <img
          src="/images/Dise単o y Logo/Logo-Berkshire.png"
          alt=""
          class="logo-sticker__img"
        />
      </figure>

      <form action="/user/signup" method="POST" class="form">
        <div class="box">
          <h2 class="box__title">Registrate</h2>
        </div>

        <div class="user">
          <input type="text" name="name" placeholder="Nombre de Usuario" class="user__info"/>
          <% if (locals.errors && errors.name) { %>
          <span class="warning"><%= errors.name.msg %> </span>
          <%}%>
        </div>

        <div class="user">
          <input type="email" name="email" placeholder="Correo Electronico" class="user__info" />
          <% if (locals.errors && errors.email) { %>
            <span class="warning"><%= errors.email.msg %></span>
            <%}%>
        </div>

        <div class="user">
          <input type="password" name="password" placeholder="Contrase単a" class="user__info"/>
          <% if (locals.errors && errors.password) { %>
            <span class="warning"><%= errors.password.msg %> </span>
            <%}%>
        </div>

        <div class="user">
          <input type="password" name="repeat_password" placeholder="Comfimar contrase単a" class="user__info"/>
          <% if (locals.errors && errors.repeat_password) { %>
            <span class="warning"><%= errors.repeat_password.msg %> </span>
            <%}%>
        </div>

        <button type="submit" class="btn__send button">Registrate</button>

        <div class="terminos">
          <input class="fit-content" type="checkbox"  name="terminos" id="check"/>
          <label class="fit-content" for="ckeck">Acepto los <a href="">Terminos y condiciones </a></label>
        </div>
        <% if (locals.errors && errors.terminos) { %>
          <span class="warning"><%= errors.terminos.msg %> </span>
        <% } %>
        <div class="user social">
          <a href="" class="social__btn button"><i class="fab fa-google social__icon"></i>GOOGLE</a>
          <a href="" class="social__btn button"><i class="fab fa-facebook-f social__icon"></i>FACEBOOK</a>
        </div>

        <div class="user">
          <a href="/user" class="enlace_link">多Ya tengo una cuenta?</a>
        </div>
      </form>
    </aside>

    <!-- FOOTER -->
    <%- include('../partials/footer') %>

    <script src="/js/header.js"></script>
  </body>
</html>
