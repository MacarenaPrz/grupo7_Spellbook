<!DOCTYPE html>
<html lang="es">
  <!-- HEAD -->
  <%- include('../partials/head') %>
  <body>
    <!-- HEADER -->
    <%- include('../partials/header') %>

    <aside class="aside">
      <figure class="logo-sticker">
        <div class="star star1"></div>
        <div class="star star2"></div>
        <div class="star star3"></div>
        <div class="star star4"></div>
        <div class="star star5"></div>
        <div class="star star6"></div>
        <div class="star star7"></div>
        <div class="star star8"></div>
        <img
          src="/images/Diseño y Logo/Logo-Berkshire.png"
          alt=""
          class="logo-sticker__img"
        />
      </figure>

      <form action="/user/signup" method="POST" class="form" id="form">
        <div class="box">
          <h2 class="box__title">Registrate</h2>
        </div>

        <div class="user">
          <input id="register-name" type="text" name="name" placeholder="Nombre de Usuario" class="user__info-name"/>
          <span class="warning" id="errorsName"></span>
          <% if (locals.errors && errors.name) { %>
            <span class="warning"><i class="fas fa-exclamation-circle"></i><%= errors.name.msg %> </span>
          <%}%>
        </div>

        <div class="user">
          <input id="register-email" type="email" name="email" placeholder="Correo Electronico" class="user__info-email" />
          <span class="warning" id="errorsEmail"></span>
          <% if (locals.errors && errors.email) { %>
            <span class="warning"><i class="fas fa-exclamation-circle"></i><%= errors.email.msg %> </span>
            <%}%>
        </div>

        <div class="user">
          
          <input id="register-password" type="password" name="password" placeholder="Contraseña" class="user__info-password"/>
          <span class="warning" id="errorsPass"></span>
          <% if (locals.errors && errors.password) { %>
           <span class="warning"><i class="fas fa-exclamation-circle"></i><%= errors.password.msg %> </span>
      
            <%}%>
        </div>

        <div class="user">
          <input id="register-confirm" type="password" name="repeat_password" placeholder="Confimar contraseña" class="user__info-password-confirm"/>
          <span class="warning" id="errorsPass2"></span>
          <% if (locals.errors && errors.repeat_password) { %>
            <span class="warning"><i class="fas fa-exclamation-circle"></i><%= errors.repeat_password.msg %> </span>
            <%}%>
        </div>
        
        <div class="terminos">
          <input class="fit-content" type="checkbox"  name="terminos" id="check"/>
          <label class="fit-content" for="ckeck">Acepto los <a href="">Terminos y condiciones </a></label>
        </div>
        <span class="warning" id="checkError"></span>
        <% if (locals.errors && errors.terminos) { %>
          <span class="warning"><%= errors.terminos.msg %> </span>
        <% } %>
       
        <span class="warning" id="formError"></span>
        <button type="submit" class="btn__send button">Registrate</button>
        
        

        <div class="user">
          <a href="/user/login" class="enlace_link">¿Ya tenés cuenta?</a>
        </div>
      </form>
    </aside>

    <!-- FOOTER -->
    <%- include('../partials/footer') %>
    <script src="/js/header.js"></script>
  </body>
</html>

<script src="/js/signUpValidator.js"></script>