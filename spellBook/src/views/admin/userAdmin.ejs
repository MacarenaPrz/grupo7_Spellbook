<!DOCTYPE html>
<html lang="es">
    <!-- HEAD -->
    <%- include('../partials/head') %>
<body>
  <!-- HEADER -->
 <header class="header error-bg">
  <div class="star star1"></div>
  <div class="star star2"></div>
  <div class="star star3"></div>
  <div class="star star4"></div>
  <div class="star star5"></div>
  <div class="star star6"></div>
  <div class="star star7"></div>
  <div class="star star8"></div>
  <!-- LOGO CON LINK AL HOME -->
  <div class="logo">
      <h1 class="logo__title"><a href="/" class="logo__link">SpellBook</a></h1>      
  </div>  
  </header>
  <main>
    <!--LIST OF PRODUCTS SECTION-->
    <section class="product-list">
      <!--LINKS TO Agregar libro, Bell AND user-->
      <h1>Hola <%= locals.userLog.name %> </h1>
      <div class="belluser">
        <a href="/admin/addProduct" class="display-shop" >Ir a libros</a>
        <a href="/user/login">
          <div class="">
            <i class="far fa-bell" id="icon"></i>
          </div>
        </a>
        <a href="/user/login">
          <div class="">
            <i class="far fa-user" id="icon"></i>
          </div>
        </a>
      </div>
      <div class="search-table">
        <h2>Usuarios</h2>
        <label name="search" id="search" >
          <i class="fas fa-search "></i>
          <input class="" type="search" name="search" id="search" placeholder="">
        </label>
      </div>
      <div class="products-table">
        <table class="f-1rem">
          <thead class="text-center">
            <tr class="head-table">
              <th>avatar</th>
              <th>Email</th>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Provincia</th>
              <th>Rol</th>
            </tr>
          </thead>
          <tbody class="text-center">             
            <% users.forEach(user => { %>
            <tr>
              <td><img src="/images/Imagenes de perfil/<%= user.avatar%>" class="admin-avatars"></td>
              <td><%= user.email%></td>
              <td><%= user.name%></td>
              <td><%= user.last_name%></td>
              <td><%= user.country%></td>
              <td><%= user.rol%></td>
              <td>
                <form action="deleteUser/<%=user.id%>?_method=DELETE" id="button-delete-user" method="POST">
                  <button class="delete-btn" type="submit"><i class="far fa-trash-alt"></i></button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section> 
  </main>
</body>
</html>