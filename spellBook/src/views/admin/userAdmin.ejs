<!DOCTYPE html>
<html lang="es">
    <!-- HEAD -->
    <%- include('../partials/head') %>
<body>
  <!-- HEADER -->
 <header class="header error-bg">
  <div class="star star1"></div>
  <div class="star star2"></div>
  <div class="star star3"></div>
  <div class="star star4"></div>
  <div class="star star5"></div>
  <div class="star star6"></div>
  <div class="star star7"></div>
  <div class="star star8"></div>
  <!-- LOGO CON LINK AL HOME -->
  <div class="logo">
      <h1 class="logo__title"><a href="/" class="logo__link">SpellBook</a></h1>
      
  </div >
  
    <!-- BURGER MENU -->
  <a href="/admin/addProduct">
    <div class="">
      <i class="far fa-user" id="icon"></i>
    </div>
  </a>
  </header>
  <main>
    <!--LIST OF PRODUCTS SECTION-->
    <section class="product-list">
      <!--LINKS TO Agregar libro, Bell AND user-->
      <h1>Hola  </h1>
      <div class="belluser">
        <button class="display-shop" id="button-create">Agregar libro</button>
        <a href="/user/login">
          <div class="">
            <i class="far fa-bell" id="icon"></i>
          </div>
        </a>
        <a href="/user/login">
          <div class="">
            <i class="far fa-user" id="icon"></i>
          </div>
        </a>
      </div>
      <div class="search-table">
        <h2>Usuarios</h2>
        <label name="search" id="search" >
          <i class="fas fa-search "></i>
          <input class="" type="search" name="search" id="search" placeholder="">
        </label>
      </div>
      <div class="products-table">
        <table>
          <thead>
            <tr class="head-table">
              <th><input type="checkbox"></th>
              <th>avatar</th>
              <th>Email</th>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Provincia</th>
              <th>Rol</th>
              <th> </th>
              <th> </th>
            </tr>
          </thead> 
          <tbody>
             
                <% users.forEach(user => { %>
                <tr>
                  <td><input type="checkbox"></td>
                  <td><img src="/images/Imagenes de perfil/<%= user.avatar%>"></td>
                  <td><%= user.email%></td>
                  <td><%= user.name%></td>
                  <td><%= user.last_name%></td>
                  <td><%= user.country%></td>
                  <td><%= user.rol%></td>
                  <td>
                    <a href="/admin/editProduct/<%= user.id %>" class="button-edit">
                        <i class="fas fa-pen"></i>
                    </a>
                  </td>
                  <td>
                    <form action="deleteUser/<%=user.id%>?_method=DELETE" id="button-delete" method="POST">
                      <button class="delete-btn" type="submit"><i class="far fa-trash-alt"></i></button>
                    </form>
                  </td>
                </tr>
                <% }) %>

            </tbody>
        </table>
      </div>
    </section> 
  </main>
  <script src="/js/admin.js"></script>
</body>
</html>