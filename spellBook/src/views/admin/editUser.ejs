<!DOCTYPE html>
<html lang="es">
<!-- HEAD -->
<%- include('../partials/head') %>

  <body>
    <!-- HEADER -->
    <%- include('../partials/headerAdmin') %> 

    <body>
      <main class="edit-user-conteiner-main">

        <!-- FORMULARIO DE REGISTRO -->
        <form action="/admin/users/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data"
          id="editUser">

          <!-- IMAGEN DE USUARIO, BARITA -->
          <section class="register-user">
            <div class="user-image">
              <img class="user-image-item" src="/images/Imagenes de perfil/<%= user.avatar %>" alt="">
            </div>
          </section>
          <div class="conteiner-info-user">
            <!-- EMAIL -->
            <div class="info-user">
              <i class="fas fa-envelope user-data-icon"></i>
              <p>
                <%= user.email %>
              </p>
            </div>
          </div>
          <!-- TÍTULO DE SECCIÓN -->
          <h2 class="title-seccion">Datos Personales</h2>
          <!-- CAMPOS A LLENAR -->
          <section class="conteiner-user-data">
            <!-- NOMBRE -->
            <p class="user-data">
              <label for="name">
                <img class="user-data-icon user-pocision" height="40px" src="/images/recursos/wizard-icon.png"
                  alt="img de mago">
              </label>
              <input class="user-date-inputs" placeholder="Nombre" type="text" name="name" id="name"
                value="<%= user.name %>">
            </p>
            <!-- APELLIDO -->
            <p class="user-data-firstname">
              <input class="user-date-inputs " placeholder="Apellido" type="text" name="firstName" id="firstName"
                value="<%= user.last_name %>">
            </p>

            <!-- LUGAR -->
            <p class="user-data">
              <label for="location">
                <i class="fas fa-globe-americas user-data-icon world-pocision"></i>
              </label>
              <input class="user-date-inputs" placeholder="País de Residencia" type="text" name="location" id="location"
                value="<%= user.country %>">
            </p>

            <!-- NACIMIENTO -->
            <p class="user-data ">
              <label for="date">
                <i class="far fa-calendar user-data-icon "><img class="image-icon" height="18px"
                    src="/images/recursos/wizard-icon.png" alt="img de mago"></i>
              </label>
              <input class="user-date-inputs-date date-pocision" type="date" name="date" id="date" value="">
            </p>

            <!-- AVATAR -->
            <p class="user-data ">
              <label for="avatar" class="cont-flex-column">
                <img class="user-data-icon user-pocision" height="25px" src="/images/recursos/wizard-icon.png"
                  alt="img de mago">
                <spam class=''> Avatar </spam>
              </label>
              <input class="user-date-inputs-date " type="file" name="avatar" id="avatar" value="<%= user.avatar %> ">
            </p>

            <!-- ROL -->
            <p class="user-data ">
              <label for="rol" class="rol-user">
                <spam class=''> ROL </spam>
              </label>
              <select name="rol" id="rol" class="user-date-inputs-date text-center">
                <option value="user">user</option>
                <option value="admin">admin</option>
              </select>
            </p>
          </section>

          <!-- BOTON PARA DE GUARDAR -->
          <div class="user-submit-container">
            <button type="submit" class="btn-save button">GUARDAR</button>
          </div>


        </form>
      </main>

      <!-- FOOTER -->
      <%- include('../partials/footer') %>

        <!-- LINK DEL JS DEL HEADER -->
        <script src="/js/header.js"></script>
    </body>

</html>