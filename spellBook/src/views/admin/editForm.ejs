<!DOCTYPE html>
<html lang="es">
    <!-- HEAD -->
    <%- include('../partials/head') %>
<body class="edit-body relative">
   
  <div class="star star1"></div>
  <div class="star star2"></div>
  <div class="star star3"></div>
  <div class="star star4"></div>
  <div class="star star5"></div>
  <div class="star star6"></div>
  <div class="star star7"></div>
  <div class="star star8"></div>
  <!-- HEADER -->
 <header class="edit-header">

  <div class="star star1"></div>
  <div class="star star2"></div>
  <div class="star star3"></div>
  <div class="star star4"></div>
  <div class="star star5"></div>
  <div class="star star6"></div>
  <div class="star star7"></div>
  <div class="star star8"></div>

  <!-- LOGO CON LINK AL HOME -->
  <div class="edit-logo">
    <h1 class="logo__title"><a href="/" class="logo__link">SpellBook</a></h1>
</div >
  <!-- BURGER MENU -->
<a href="/admin/addProduct">
  <div class="edit-btn ">
    <i class="far fa-user" id="icon"></i>
  </div>
</a>
  </header>  
  <!-- EDIT FORM -->

  <main class="">    
    
    <section class="conteiner-main">
      <div class="conteiner-user-data">
        <div class="add-btn">
          <h2 id="shop-form" class="info-user"><%= idBook.titulo %></h2>
        </div>

        <form method="POST" action="/admin/editProduct/<%= idBook.id %>?_method=PUT" enctype="multipart/form-data" id="product">
          <fieldset>
            <label for="image">Imagen:</label>
            <input type="file" name="imagen" id="image" />
          </fieldset>
          <fieldset class="user-data">
            <label for="title">Título:</label>
            <input
              type="text"
              name="titulo"
              id="title"
              value="<%= idBook.title %> "
            />
          </fieldset>
          <fieldset class="user-data">
            <label for="autor">Autor:</label>
            <select name="autor" id="autor" class="select-fcm border-fcm" >
              <% authors.forEach(author => { %>
                  <option value="<%= author.id %>" ><%= author.name %></option>
              <% }); %>
          </select>
          </fieldset>
          <fieldset class="user-data">
            <label for="amount">Stock:</label>
            <input
              type="number"
              name="cantidad"
              id="amount"
              value="<%= idBook.stock %>"
            />
          </fieldset>
          <fieldset class="user-data">
            <label for="price">Precio:</label>
            <input
                type="text"
                id="price"
                name="precio"
                value="<%= idBook.price %>"
            />
          </fieldset>
          <fieldset class="user-data">
            <label for="descripcion">Descripción:</label>
            <input
              type="textarea"
              name="descripcion"
              id="descripcion"
              value="<%= idBook.description %>"              
            />
          </fieldset>
          <fieldset>
            <label for="descripcion">Edad Recomendada:</label>
            <select name="recommended_age" id="" class="select-fcm border-fcm">
              <% recommended_age.forEach(age => { %>
                  <option value="<%= age.id %>"><%= age.age %></option>
              <% }); %>
          </select>
          </fieldset>
          <fieldset>
            <label for="descripcion">Editorial:</label>
            <input
              type="textarea"
              name="publisher"
              id="publisher"           
              value="<%= idBook.publisher%>"
            />
          </fieldset>
          <fieldset>
            <label for="descripcion">Idioma:</label>
            <input
              type="textarea"
              name="language"
              id="language"
              value="<%= idBook.language %>"              
            />
          </fieldset>
          <fieldset>
            <label for="descripcion">Año de Publicación:</label>
            <input
              type="textarea"
              name="publication_year"
              id="publication_year"              
              value="<%= idBook.publication_year %>"
            />
          </fieldset>
          <fieldset>
            <label for="descripcion">Nro de Páginas:</label>
            <input
              type="textarea"
              name="pages"
              id="pages"
              value="<%= idBook.pages %>"              
            />
          </fieldset>

          <fieldset>
            <input class="delete" type="reset" value="Borrar">
            <button class="display-shop" type="submit" > Guardar</button>
          </fieldset>
        </form>
      </div>
    </section>

  </main>
</body>
</html>