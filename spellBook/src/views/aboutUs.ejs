<script>
  let $formContact = document.querySelector('#form-contact')
  $formContact.addEventListener('submit', (e) => {
    e.preventDefault()
    let $modalTanks = document.querySelector('#modal-tanks'),
    $modalButtonTanks = document.querySelector('#modal-button-tanks')

    $modalTanks.style.display = "flex"
    $modalButtonTanks.addEventListener('click', () => {
